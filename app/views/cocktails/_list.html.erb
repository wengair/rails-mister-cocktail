
<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="mcard shadow-sm" style="width: 18rem;">
      <div class="card-body bg-light" style="background-image: url(<%= cocktail.photo %>); background-size: contain;">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail), style:"color:#FFFFFF"%></h5>
      </div>
    </div>
  <% end %>
</div>
